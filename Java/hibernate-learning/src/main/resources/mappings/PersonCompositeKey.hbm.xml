<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.hibernate.learning.models">

	<class name="PersonComposite" table="people_composite">
		<composite-id name="personId" class="org.hibernate.learning.models.compositeKeys.PersonId">
			<key-property name="firstName" column="first_name"></key-property>
			<key-property name="lastName" column="last_name"></key-property>
		</composite-id>
	</class>

</hibernate-mapping>
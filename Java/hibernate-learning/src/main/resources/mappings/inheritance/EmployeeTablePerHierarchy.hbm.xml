<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.hibernate.learning.entities.inheritance">
	<class name="Employee" table="employees" discriminator-value="emp">
		<id name="id" column="employee_id">
			<generator class="sequence">
				<param name="sequence">employees_employee_id_seq</param>
			</generator>
		</id>

		<discriminator column="discriminator" type="string"></discriminator>
		
		<property name="name"></property>

		<subclass name="RegularEmployee" extends="Employee" discriminator-value="rEmp">
			<property name="salary"></property>
		</subclass>

		<subclass name="PerHourEmployee" extends="Employee" discriminator-value="hEmp">
			<property name="hourPayPrice" column="hour_pay_price"></property>
		</subclass>
	</class>
</hibernate-mapping>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.hibernate.learning.entities">

	<class name="Event" table="events">
		<id name="id" column="event_id">
			<generator class="sequence">
				<param name="sequence">events_event_id_seq</param>
			</generator>
		</id>

		<property name="date" type="timestamp" column="date" />
		<property name="title" />
		
		<set name="participants" table="people_events" inverse="true">
            <key column="event_id"/>
            <many-to-many column="person_id" class="Person"/>
        </set>
	</class>

</hibernate-mapping>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.hibernate.learning.entities">

	<class name="Person" table="people">
		<id name="id" column="person_id">
			<generator class="sequence">
				<param name="sequence">people_person_id_seq</param>
			</generator>
		</id>

		<property name="age" />
		<property name="firstName" column="first_name" />
		<property name="lastName" column="last_name" />

		<set name="events" table="people_events">
			<key column="person_id" />
			<many-to-many column="event_id" class="Event" />
		</set>
		
		<set name="emailAddresses" table="people_email_addresses">
            <key column="person_id"/>
            <element type="string" column="email"/>
        </set>
	</class>

</hibernate-mapping>
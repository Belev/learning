<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.hibernate.learning.entities.inheritance">
	<class name="RegularEmployee" table="reg_employees_impl_poly">
		<id name="id" column="reg_employee_id">
			<generator class="sequence">
				<param name="sequence">reg_employees_reg_employee_id_seq</param>
			</generator>
		</id>

		<property name="name"></property>
		<property name="salary"></property>
	</class>

	<class name="PerHourEmployee" table="hour_employees_impl_poly">
		<id name="id" column="hour_employee_id">
			<generator class="sequence">
				<param name="sequence">hour_employees_hour_employee_id_seq</param>
			</generator>
		</id>

		<property name="name"></property>
		<property name="hourPayPrice" column="hour_pay_price"></property>
	</class>
</hibernate-mapping>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.hibernate.learning.entities.inheritance">
	<class name="Employee" abstract="true">
		<id name="id" column="employee_id">
			<generator class="sequence">
				<param name="sequence">employees_employee_id_seq</param>
			</generator>
		</id>

		<property name="name"></property>

		<union-subclass name="RegularEmployee" table="reg_employees_union">
			<property name="salary"></property>
		</union-subclass>

		<union-subclass name="PerHourEmployee" table="hour_employees_union">
			<property name="hourPayPrice" column="hour_pay_price"></property>
		</union-subclass>
	</class>
</hibernate-mapping>